#!/bin/env sh
## run chrome as a pdf viewer

if [ "$#" -ne 1 ] ; then
    echo "using: $0 xxx.pdf" >&2
    exit
fi

if [ "$(echo ${1##*.} | awk '{print tolower($1);}')" != "pdf" ] ; then
    echo "using: $0 xxx.pdf" >&2
    exit
fi
if [ ! -r "$1" ] ; then 
    echo "$1 not readable!" >&2
    exit
fi

f=$(urlencode "$(readlink -f "${1}")")

nohup google-chrome-stable --user-data-dir="$HOME/.config/google-chrome-pdf" --app="$f" >/dev/null 2>&1 &
